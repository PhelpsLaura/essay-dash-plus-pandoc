<% @title = @section.title %>

<h1 class="center"><%= @essay.title %></h1>
<h2 class="center" style="font-family: Fredericka the Great"><%= @section.title %></h2>

<div class="sec_outline hoverable">
  <p><%= markdown(@section.outline) unless @section.outline.blank? %></p>
</div>

<div class="sec_content">
  <h2>Drafting: </h2>
  <%= markdown(@section.rough_drafting) unless @section.rough_drafting.blank? %>
</div>

<div class="card hoverable sec_cleaned">
    <h2>Current Working Draft: </h2>
    <%= markdown(@section.final_draft) unless @section.final_draft.blank?%>
    </br></br>
    <%= link_to "EDIT", edit_final_essay_section_path(@essay, @section),
                        :class => 'btn-flat waves-effect lime-waves waves-lighten' %>
</div>

<div class="clearfix">
</div>

<%= link_to "EDIT", edit_essay_section_path(@essay, @section), :class => "btn lime"%>
<%= link_to "DELETE", essay_section_path(@essay, @section), method: :delete,
                       data: {confirm: "Are you sure you want to delete this section?"},
                       :class => "btn lime"%>
