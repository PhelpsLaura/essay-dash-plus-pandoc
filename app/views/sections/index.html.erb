<% @title = @essay.title %>

<div class = "card hoverable paper">
  <h1><%= @essay.title %></h1>

  <% if @essay.sections.any? %>
    <% @essay.sections.order(:order).each do |section| %>
      <p><%= markdown(section.final_draft) unless section.final_draft.blank? %></p>
    <%end%>
  <%end%>

  <h5>Works Cited </h5>

  <%= render 'sources/works_cited' %>
</div>
